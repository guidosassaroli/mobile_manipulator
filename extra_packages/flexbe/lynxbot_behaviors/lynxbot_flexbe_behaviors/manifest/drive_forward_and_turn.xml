<?xml version="1.0" encoding="UTF-8"?>

<behavior name="Drive Forward And Turn">

	<executable package_path="lynxbot_flexbe_behaviors.drive_forward_and_turn_sm" class="DriveForwardAndTurnSM" />
	<tagstring>Drive</tagstring>
	<author>Panagiotis</author>
	<date>Sun Feb 23 2020</date>
	<description>
		Drives forward until encountering an obstacle
Then it turn 90 degrees
and continues Forward
Repeat 
Until Total Distance Traveled
	</description>


	<!-- Contained Behaviors -->

	<!-- Available Parameters -->
	<params>

		<param type="numeric" name="speed" default="0.5" label="speed" hint="Sets the speed">
			<min value="0" />
			<max value="1" />
		</param>

		<param type="numeric" name="travel_dist" default="20" label="travel_dist" hint="Sets the travel_dist">
			<min value="0" />
			<max value="50" />
		</param>

		<param type="numeric" name="obstacle_dist" default="0.7" label="obstacle_dist" hint="Sets the obstacle_dist">
			<min value="0" />
			<max value="1" />
		</param>

		<param type="numeric" name="turn_angle" default="90" label="turn_angle" hint="Sets the turn_angle">
			<min value="0" />
			<max value="180" />
		</param>

		<param type="numeric" name="t_speed" default="0.5" label="t_speed" hint="Sets the t_speed">
			<min value="0" />
			<max value="1" />
		</param>

	</params>


</behavior>