<?xml version="1.0" encoding="UTF-8"?>

<behavior name="Turn">

	<executable package_path="lynxbot_flexbe_behaviors.turn_sm" class="TurnSM" />
	<tagstring>turn</tagstring>
	<author>Panagiotis</author>
	<date>Wed Jan 22 2020</date>
	<description>
		robot turns
	</description>


	<!-- Contained Behaviors -->

	<!-- Available Parameters -->
	<params>

		<param type="numeric" name="turn_angle" default="1.57" label="turn_angle" hint="Sets the turn_angle">
			<min value="0" />
			<max value="2" />
		</param>

		<param type="numeric" name="t_speed" default="0.4" label="t_speed" hint="Sets the t_speed">
			<min value="0" />
			<max value="1" />
		</param>

		<param type="numeric" name="speed" default="0.4" label="speed" hint="Sets the speed">
			<min value="0" />
			<max value="1" />
		</param>

		<param type="numeric" name="travel_dist" default="0.5" label="travel_dist" hint="Sets the travel_dist">
			<min value="0" />
			<max value="1" />
		</param>

		<param type="numeric" name="obstacle_dist" default="0.2" label="obstacle_dist" hint="Sets the obstacle_dist">
			<min value="0" />
			<max value="1" />
		</param>

	</params>


